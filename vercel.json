{
  "version": 2,
  "routes": [
    {
      "src": "^/client/.*",
      "dest": "/index.html"
    },
    {
      "src": "^/auth.*",
      "dest": "/index.html"
    },
    {
      "src": "^/admin.*",
      "dest": "/index.html"
    },
    {
      "src": "^/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "^/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "^/favicon.ico",
      "dest": "/favicon.ico"
    },
    {
      "src": ".*",
      "dest": "/index.html"
    }
  ],
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ]
} 